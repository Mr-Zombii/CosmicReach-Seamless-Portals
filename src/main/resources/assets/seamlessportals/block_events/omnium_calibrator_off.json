{
    "parent":"base:block_events_default",
    "stringId": "seamlessportals:block_events_omnium_calibrator_off",
    "triggers":
    {
        "onPlace":
        [
            {
                "actionId": "seamlessportals:face_away_from_player",
                "parameters": {
                    "invert": true
                }
            },
            {
                "actionId": "base:play_sound_2d",
                "parameters":
                {
                    "sound": "sounds/blocks/block-place.ogg",
                    "volume": 1,
                    "pitch": 1,
                    "pan": 0
                }
            }
        ],
        "onBreak": [
            {
                "actionId": "base:replace_block_state",
                "parameters":
                {
                    "xOff": 0,
                    "yOff": 0,
                    "zOff": 0,
                    "blockStateId": "base:air[default]"
                }
            },
            {
                "actionId": "base:play_sound_2d",
                "parameters":
                {
                    "sound": "sounds/blocks/block-break.ogg",
                    "volume": 1,
                    "pitch": 1,
                    "pan": 0
                }
            },
            {
                "actionId": "base:item_drop",
                "if":
                {
                    "srcPlayer":
                    {
                        "gamemode":
                        {
                            "allows_items_drop_on_break": true
                        }
                    }
                },
                "parameters":
                {
                    "position": [0, 0, 0]
                }
            }
        ]
    }
}